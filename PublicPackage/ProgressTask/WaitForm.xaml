<Window x:Class="ProgressTask.WaitForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgressTask"
        mc:Ignorable="d" 
        Title="WaitForm" Height="50" Width="300" WindowStyle="None" WindowStartupLocation="CenterScreen" >
    <Grid>
        <StackPanel>
            <Label Name="TaskName" ></Label>
            <ProgressBar Name="progressbar" Minimum="0" Maximum="1"  IsIndeterminate="True" Height="16"  Margin="0,0,0,16" />
        </StackPanel>
        
    </Grid>
</Window>
